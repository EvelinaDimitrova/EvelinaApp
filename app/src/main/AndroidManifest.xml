<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fmi.evelina.unimobileapp">


    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".controller.ApplicationController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activity.DrawerBaseActivity"
            android:label="@string/title_activity_drawer_base"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.CalendarActivity"
            android:label="@string/title_activity_calendar"
            android:theme="@style/AppTheme.NoActionBar" />
        <!--<activity android:name=".dialog.ViewEvent" />-->
        <activity
            android:name=".activity.NewsActivity"
            android:label="@string/title_activity_news"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".activity.NewsDetailsActivity"
            android:label="@string/title_activity_news_details"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".activity.StudentPlanActivity"
            android:label="@string/title_student_plan"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".activity.ElectionCampaignActivity"
            android:label="@string/title_election_campaign"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
