<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fmi.evelina.unimobileapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:name=".controller.ApplicationController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.SettingsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".activity.LoginActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".activity.DrawerBaseActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.HomeActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.Calendar.CalendarActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_calendar"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.Calendar.CreateEventActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_create_event"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.News.NewsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_news"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.News.NewsDetailsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_news_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.News.CreateNewsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_news_create"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.StudentPlanActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_student_plan"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.ElectionCampaign.ElectionCampaignActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_election_campaign"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.ElectionCampaign.ElectionCourseActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_election_course"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.Contacts.ContactsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_contacts"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.Contacts.ContactDetailsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_contact_detail"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>
