<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.ElectionCampaign.ElectionCourseActivity">
    <!--tools:showIn="@layout/activity_home">-->

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*">

        <TableRow>

            <TextView
                android:layout_weight="1"
                android:text="Name:" />

            <TextView
                android:id="@+id/election_course_name"
                android:layout_weight="1" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_weight="1"
                android:text="Category:" />

            <TextView
                android:id="@+id/election_course_category"
                android:layout_weight="1" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_weight="1"
                android:text="Credits:" />

            <TextView
                android:id="@+id/election_course_credits"
                android:layout_weight="1" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_weight="1"
                android:text="Lecturer:" />

            <TextView
                android:id="@+id/election_course_lecturer"
                android:layout_weight="1" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_weight="1"
                android:text="Hours:" />

            <TextView
                android:id="@+id/election_course_hours"
                android:layout_weight="1" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_weight="1"
                android:text="Min Grade:" />

            <TextView
                android:id="@+id/election_course_min_grade"
                android:layout_weight="1" />
        </TableRow>

        <TableRow>

            <TextView android:text="Description:" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <ScrollView
                android:layout_span="3"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/election_course_description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </ScrollView>


        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/election_course_btn_back"
                android:layout_weight="1"
                android:text="Back" />

            <Button
                android:id="@+id/election_course_btn_enroll"
                android:layout_weight="1"
                android:text="Enroll" />

            <Button
                android:id="@+id/election_course_btn_cancel"
                android:layout_weight="1"
                android:text="Cancel"
                android:visibility="gone" />

        </TableRow>

    </TableLayout>

</LinearLayout>
